---
import BaseLayout from "@/layouts/BaseLayout.astro"
import { Image } from "astro:assets"
import rcoLogo from "../assets/logos/rco-white.svg"
import unionenLogo from "../assets/logos/unionen.svg"
import stLogo from "../assets/logos/st.svg"
import stadsmissionenLogo from "../assets/logos/stadsmissionen.svg"
import ingmarbergmanLogo from "../assets/logos/ingmarbergman.svg"
---

<BaseLayout>
  <main>
    <div class="container">
      <h1 class="text-xs uppercase">Selected Projects</h1>
      <div class="grid lg:grid-cols-3 gap-4 pt-6">
        <div class="w-full">
          <div
            class="bg-rcoBlue p-6 space-y-4 rounded-3xl min-h-80 flex items-center justify-center"
          >
            <Image src={rcoLogo} alt="" />
          </div>
        </div>

        <div class="w-full">
          <div
            class="bg-unionenGreen p-6 space-y-4 rounded-3xl min-h-80 flex items-center justify-center"
          >
            <Image src={unionenLogo} alt="" />
          </div>
        </div>

        <div class="w-full">
          <div
            class="bg-stBlue p-6 space-y-4 rounded-3xl min-h-80 flex items-center justify-center"
          >
            <Image src={stLogo} alt="" />
          </div>
        </div>

        <div class="w-full">
          <div
            class="bg-stadsmissionenOrange p-6 space-y-4 rounded-3xl min-h-80 flex items-center justify-center"
          >
            <Image src={stadsmissionenLogo} alt="" />
          </div>
        </div>

        <div class="w-full">
          <div
            class="bg-ingmarPink p-6 space-y-4 rounded-3xl min-h-80 flex items-center justify-center"
          >
            <Image src={ingmarbergmanLogo} alt="" />
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
